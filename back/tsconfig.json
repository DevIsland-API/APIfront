{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
      "@/tests/*": ["tests/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  }
}
